<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4">

    <fragment
        android:id="@+id/books_list_fragment"
        android:name="qa.edu.qu.cmps312.elibrary.BooksListFragment"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/book_dynamic_fragment"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/frame_layout_text"
            android:id="@+id/frame_layout_tv"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fav_book_dynamic_fragment"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>